<MudGrid Justify="Justify.SpaceBetween" Style="align-items: center;" >
	@foreach (var operation in Operations)
	{
		<MudItem xs="4">
			<MudStack Row AlignItems="AlignItems.Center">
				@if (string.IsNullOrEmpty(operation.Name))
				{
					<MudAutocomplete T="string" SearchFunc="@SearchOperation" OpenIcon="@Icons.Material.Filled.Search" Value="operation.Name" ValueChanged="@(value => GetOperationAttributes(value, operation))" Dense Variant="Variant.Outlined" Label="Select Operation" Margin="Margin.Dense" />
				}
				else
				{
					<MudText>@operation.Name</MudText>
				}
			</MudStack>
		</MudItem>
		<MudItem xs="7">
			@foreach (var item in operation.Attributes)
			{
				<MudStack Row AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween" Style="width: 100%;">
					<MudText>Attributes:</MudText>
					<MudText>@item.Key</MudText>
					<MudTextField Placeholder="@($"Insert '{item.Key}' target")" T="string" @bind-Value="operation.Attributes[item.Key]" Margin="Margin.Dense" Variant="Variant.Outlined" Immediate FullWidth />
				</MudStack>
			}
		</MudItem>
		<MudItem xs="1" Style="display: flex; justify-content: flex-end; align-items: center;">
			<MudIconButton Size="Size.Small" Icon="@Icons.Material.Filled.Delete" OnClick="@(() => RemoveOperation(operation))" Color="Color.Error" />
		</MudItem>
	}
	<MudItem xs="12">
		<MudTooltip RootStyle="width: 100%;" Text="Add Operation">
			<MudButton FullWidth Variant="Variant.Outlined" Color="Color.Primary" OnClick="AddOperation">
				<MudIcon Icon="@Icons.Material.Filled.Add" Color="Color.Primary" />
			</MudButton>
		</MudTooltip>
	</MudItem>
</MudGrid>
