<MudGrid style="align-items:center;">

	<MudItem xs="7">
		<MudAutocomplete FullWidth Margin="Margin.Dense" T="string" Label="Stat" @bind-Value="BuffParam.Key" SearchFunc="@Search" ResetValueOnEmptyText CoerceText SelectValueOnTab Immediate Variant="Variant.Outlined" ToStringFunc="x => BuffParamSerializer.GetName(x)" />
	</MudItem>

	<MudItem xs="3">
		<MudSelect T="string" @bind-Value="CurrentEnumString" FullWidth="true" Margin="Margin.Dense" Variant="Variant.Outlined" Label="Math Operation">
			@foreach (var enumName in enumNames)
			{
				<MudSelectItem T="string" Value="@enumName">
					@enumDisplayNames[enumName]
				</MudSelectItem>
			}
		</MudSelect>
	</MudItem>

	<MudItem xs="1">
		<MudNumericField @bind-Value="BuffParam.Value" Culture="@System.Globalization.CultureInfo.InvariantCulture" HideSpinButtons="true" Variant="Variant.Outlined" Label="Value" FullWidth="true" Margin="Margin.Dense" Immediate />
	</MudItem>

	<MudItem xs="1">
		<MudStack Row AlignItems="AlignItems.Center" Justify="Justify.FlexEnd" style="width: 100%;">
			<MudTooltip Text="@(BuffParamSerializer.GetDescription(BuffParam.Key))">
				<MudIcon Icon="@Icons.Material.Outlined.Info" Size="Size.Small" />
			</MudTooltip>
			<MudTooltip Text="Delete parameter">
				<MudIconButton OnClick="@(() => RemoveBuffParam.InvokeAsync(BuffParam.Key))" Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small" />
			</MudTooltip>
		</MudStack>
	</MudItem>

</MudGrid>