@if (Attribute is not null)
{
	@switch (Attribute.Value)
	{
		case bool:
			<MudItem xs="2" sm="2" md="2" lg="2" Class="mx-0">
				<MudPaper Class="mod-item-card" Outlined="true" Elevation="0" Height="100px">
					<BoolAttribute Attribute="Attribute" RemoveAttribute="Remove" />
				</MudPaper>
			</MudItem>
			break;
		case Enum:
			<MudItem xs="2" sm="2" md="2" lg="2" Class="mx-0">
				<MudPaper Class="mod-item-card" Outlined="true" Elevation="0" Height="100px">
					<EnumAttribute Attribute="Attribute" RemoveAttribute="Remove" />
				</MudPaper>
			</MudItem>
			break;
		case double:
			<MudItem xs="2" sm="2" md="2" lg="2" Class="mx-0">
				<MudPaper Class="mod-item-card" Outlined="true" Elevation="0" Height="100px">
					<DoubleAttribute Attribute="Attribute" RemoveAttribute="Remove" />
				</MudPaper>
			</MudItem>
			break;
		case int:
			<MudItem xs="2" sm="2" md="2" lg="2" Class="mx-0">
				<MudPaper Class="mod-item-card" Outlined="true" Elevation="0" Height="100px">
					<IntAttribute Attribute="Attribute" RemoveAttribute="Remove" />
				</MudPaper>
			</MudItem>
			break;
		case string:
			<MudItem xs="4" sm="4" md="4" lg="4" Class="mx-0">
				<MudPaper Class="mod-item-card" Outlined="true" Elevation="0" Height="100px">
					<StringAttribute Attribute="Attribute" RemoveAttribute="Remove" />
				</MudPaper>
			</MudItem>
			break;
		case IList<BuffParam>:
			<MudItem xs="12" sm="12" md="12" lg="12">
				<MudPaper Class="mod-item-card" Outlined="true" Elevation="0">
					<MudGrid Spacing="4">
						<MudItem xs="12" sm="12" md="12" lg="12">
							<MudButton class="button-prominent" Style="font-size: 0.8rem !important; padding: 0.4rem 0.8rem !important;" FullWidth="true" OnClick="AddBuffParam">Add Buff Parameter</MudButton>
						</MudItem>
						<MudItem xs="12" sm="12" md="12" lg="12">
							<BuffParamsAttribute Attribute="Attribute" @ref="childComponent" />
						</MudItem>
					</MudGrid>					

				</MudPaper>
			</MudItem>
			break;
		default:
			<MudText>Unknown attribute type</MudText>
			break;
	}
}