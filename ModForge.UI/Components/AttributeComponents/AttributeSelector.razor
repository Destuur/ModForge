@if (Attribute is not null)
{
	@switch (Attribute.Value)
	{
		case bool:
			<BoolAttribute Attribute="Attribute" RemoveAttribute="Remove" />
			break;
		case Enum:
			<EnumAttribute Attribute="Attribute" RemoveAttribute="Remove" />
			break;
		case double:
			<DoubleAttribute Attribute="Attribute" RemoveAttribute="Remove" />
			break;
		@* case int:
			<IntAttribute Attribute="Attribute" RemoveAttribute="Remove" />
			break; *@
		case string:
			<StringAttribute Attribute="Attribute" RemoveAttribute="Remove" />
			break;
		case IList<BuffParam>:
			<MudGrid Justify="Justify.FlexStart" Style="align-items: center; width: 100%;" Class="px-4 py-3">

				<MudItem xs="2">
					<MudText Typo="Typo.h6">@FormatLabel(Attribute.Name)</MudText>
				</MudItem>

				<MudItem xs="1">
					<MudIconButton Icon="@Icons.Material.Outlined.Info" Size="Size.Small" />
					<MudIconButton Icon="@Icons.Material.Filled.Refresh" Size="Size.Small" />
				</MudItem>

				<MudItem xs="12" Class="pt-0">
					<MudStack style="width: 100%">
						<BuffParamsAttribute Attribute="Attribute" @ref="childComponent" />
						<MudButton OnClick="AddBuffParam" Color="Color.Primary" Variant="Variant.Outlined" FullWidth="false">
							<MudIcon Color="Color.Primary" Icon="@Icons.Material.Filled.Add" />
						</MudButton>
					</MudStack>
				</MudItem>
			</MudGrid>
			break;
		default:
			<MudText>Unknown attribute type</MudText>
			break;
	}
}