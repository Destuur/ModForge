@if (Attribute is not null)
{
	@switch (Attribute.Value)
	{
		case bool:
			<BoolAttribute Attribute="Attribute" RemoveAttribute="Remove" ResetedValue="ResetValue" />
			break;
		case Enum:
			<EnumAttribute Attribute="Attribute" RemoveAttribute="Remove" ResetedValue="ResetValue" />
			break;
		case double:
			<DoubleAttribute Attribute="Attribute" RemoveAttribute="Remove" ResetedValue="ResetValue" />
			break;
		@* case int:
			<IntAttribute Attribute="Attribute" RemoveAttribute="Remove" ResetedValue="ResetValue" />
			break; *@
		case string:
			<StringAttribute Attribute="Attribute" RemoveAttribute="Remove" ResetedValue="ResetValue" />
			break;
		case IList<BuffParam>:
			<MudGrid Justify="Justify.FlexStart" Style="align-items: center; width: 100%;" Class="px-4 py-3">

				<MudItem xs="2">
					<MudText Typo="Typo.h6">@FormatLabel(Attribute.Name)</MudText>
				</MudItem>

				<MudItem xs="1">
					<MudIconButton Icon="@Icons.Material.Outlined.Info" Size="Size.Small" />
					<MudIconButton Icon="@Icons.Material.Filled.Refresh" OnClick="@(() => ResetValue(Attribute.Name))" Size="Size.Small" />
				</MudItem>

				<MudItem xs="9" Style="width: 100%;">
					<MudStack Row AlignItems="AlignItems.End">
						<MudTooltip Text="Add parameter">
							<MudIconButton Icon="@Icons.Material.Filled.Add" OnClick="AddBuffParam" Color="Color.Primary" Variant="Variant.Filled" />
						</MudTooltip>
					</MudStack>
				</MudItem>

				<MudItem xs="12" Class="pt-0">
					<MudStack style="width: 100%">
						<BuffParamsAttribute Attribute="Attribute" @ref="childComponent" />
					</MudStack>
				</MudItem>
			</MudGrid>
			break;
		default:
			<MudText>Unknown attribute type</MudText>
			break;
	}
}