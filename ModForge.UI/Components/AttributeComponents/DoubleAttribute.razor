@if (Attribute is not null)
{
	<MudGrid Justify="Justify.FlexStart" Style="align-items: center; width: 100%;" Class="px-4">

		<MudItem xs="2">
			<MudText>@FormatLabel(Attribute.Name)</MudText>
		</MudItem>

		<MudItem xs="1">
			<MudIconButton Icon="@Icons.Material.Outlined.Info" Size="Size.Small" />
			<MudIconButton Icon="@Icons.Material.Filled.Refresh" Size="Size.Small" />
		</MudItem>

		<MudItem xs="4">
			<MudNumericField Immediate="false" @bind-Value="CurrentValue" FullWidth="false" Margin="Margin.Dense" Underline="false" Variant="Variant.Outlined" Class="ma-3" HideSpinButtons="true" />
		</MudItem>

		<MudItem xs="5">
			<MudText>@TimeSpan.FromSeconds(CurrentValue).ToString("hh") Stunden, @TimeSpan.FromSeconds(CurrentValue).ToString("mm") Minuten, @TimeSpan.FromSeconds(CurrentValue).ToString("ss") Sekunden</MudText>
		</MudItem>

	</MudGrid>
}
