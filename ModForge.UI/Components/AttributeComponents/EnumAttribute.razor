@if (Attribute is not null)
{

	@if (enumNames.Any())
	{
		<MudGrid Justify="Justify.FlexStart" Style="align-items: center; width: 100%;" Class="px-4">

			<MudItem xs="2">
				<MudText Typo="Typo.h6">@GetTypeLabel()</MudText>
			</MudItem>

			<MudItem xs="1">
				<MudIconButton Icon="@Icons.Material.Outlined.Info" Size="Size.Small" />
				<MudIconButton Icon="@Icons.Material.Filled.Refresh" Size="Size.Small" />
			</MudItem>

			<MudItem xs="4">
				<MudSelect Immediate="false" @bind-Value="CurrentEnumString" Dense="true" FullWidth="false" Margin="Margin.Dense" Underline="false" Variant="Variant.Outlined" Class="my-3 align-input-center">

					@foreach (var enumName in enumNames)
					{
						<MudSelectItem T="string" Value="@enumName">
							@enumDisplayNames[enumName]
						</MudSelectItem>
					}

				</MudSelect>
			</MudItem>

		</MudGrid>
	}
}
