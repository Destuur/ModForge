@if (Attribute is not null)
{
	<MudGrid Justify="Justify.FlexStart" Style="align-items: center; width: 100%;" Class="px-4">

		<MudItem xs="2">
			<MudText Typo="Typo.h6">@FormatLabel(Attribute.Name)</MudText>
		</MudItem>

		<MudItem xs="1">
			<MudIconButton Icon="@Icons.Material.Outlined.Info" Size="Size.Small" />
			<MudIconButton Icon="@Icons.Material.Filled.Refresh" onclick="@(() => ResetValue(Attribute.Name))" Size="Size.Small" />
		</MudItem>

		<MudItem xs="4">
			<MudSwitch Color="Color.Primary" @bind-Value="BoolValue" Class="my-1"  />
		</MudItem>

	</MudGrid>
}