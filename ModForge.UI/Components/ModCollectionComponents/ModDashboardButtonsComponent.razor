<MudGrid>
	<MudItem md="5" lg="5">
		<MudTooltip Text="You must import game data before creating a mod. You can do this in the Settings." Inline="false" Disabled="!ValidateModItemList()">
			<MudButton Class="button-prominent" Style="height: 68px" Disabled="@isDisabled" OnClick="GoToNewMod" Ripple="false" StartIcon="@Icons.Material.Filled.AddBox" DropShadow="false" Variant="Variant.Text" FullWidth="true">New Mod</MudButton>
		</MudTooltip>
	</MudItem>
	<MudItem md="5" lg="5">
		<MudButton Class="button-prominent" OnClick="GoToManageMods" Disabled="@isDisabled" Ripple="false" StartIcon="@Icons.Material.Filled.AddBox" Style="height: 68px" Color="Color.Primary" DropShadow="false" Variant="Variant.Filled" FullWidth="true">Manage Mods</MudButton>
	</MudItem>
	<MudItem md="2" lg="2">
		<MudButton Class="button-neutral" OnClick="GoToSettings" Ripple="false" StartIcon="@Icons.Material.Filled.Settings" Style="height: 68px; border-color: #c1c1c4" DropShadow="false" Variant="Variant.Outlined" FullWidth="true">Settings</MudButton>
	</MudItem>
</MudGrid>