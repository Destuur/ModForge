<MudGrid Style="height: 100%; margin: 0px;" Class="pr-4" Spacing="0">

	<MudItem md="12" Style="height: 7%; width: 100%;" Class="pb-2">
		<MudStack Justify="Justify.SpaceBetween" Row Style="height: 100%; width: 100%;" AlignItems="AlignItems.Center">
			<MudText Class="header-primary pr-2" Typo="Typo.h6">Perks</MudText>
			<MudSpacer />
			<MudStack Row Style="height: 100%;" AlignItems="AlignItems.Center" Spacing="2">

				<MudTooltip Text="Emptys the current loadout of this savefile">
					<MudButton Variant="Variant.Outlined" Color="Color.Error">Filter</MudButton>
				</MudTooltip>

				<MudTextField T="string" Variant="Variant.Outlined" Margin="Margin.Dense" Style="color: var(--background)" />

				<MudImage Src="/images/Icons/forgeicon.png" Height="40" />

			</MudStack>
		</MudStack>
	</MudItem>

	<MudItem md="12" Style="height: 93%; padding: 0px;">
		<ModItemListItems ModItems="@XmlToJsonService.Perks.ToList()" />
	</MudItem>

</MudGrid>