<MudDialog Class="dialog-card">
	<DialogContent>
		<MudTable RowClassFunc="@SelectedRowClassFunc" @ref="mudTable" Striped Elevation="0" Bordered="false" Height="400px" FixedHeader Items="@BuffParamSerializer.GetAllKeys()" Dense Hover ReadOnly Filter="new Func<string, bool>(FilterFunc)" @bind-SelectedItem="SelectedBuffParamKey" SortLabel="Sort By">
			<ToolBarContent>
				<MudText Typo="Typo.h4" Class="header-primary"><b>Buff Parameter</b></MudText>
				<MudSpacer />
				<MudTextField @bind-Value="searchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" Variant="Variant.Outlined" Margin="Margin.Dense" Style="background-color: var(--mud-palette-surface);"></MudTextField>
			</ToolBarContent>
			<ColGroup>
				<col style="width:50px;" />
				<col style="width:80px;" />
				<col style="width:50%;" />
			</ColGroup>
			<HeaderContent>
				<MudTh><MudTableSortLabel SortBy="new Func<string, object>(x => x)">Key</MudTableSortLabel></MudTh>
				<MudTh><MudTableSortLabel SortBy="new Func<string, object>(x => BuffParamSerializer.GetName(x))">Name</MudTableSortLabel></MudTh>
				<MudTh><MudTableSortLabel InitialDirection="SortDirection.Ascending" SortBy="new Func<string, object>(x => BuffParamSerializer.GetDescription(x))">Definition</MudTableSortLabel></MudTh>
			</HeaderContent>
			<RowTemplate>
				<MudTd DataLabel="Key">@context</MudTd>
				<MudTd DataLabel="Name">@BuffParamSerializer.GetName(context)</MudTd>
				<MudTd DataLabel="Definition">@BuffParamSerializer.GetDescription(context)</MudTd>
			</RowTemplate>
			<PagerContent>
				<MudTablePager />
			</PagerContent>
		</MudTable>
	</DialogContent>
	<DialogActions>
		<MudButton Variant="Variant.Outlined" Color="Color.Error" OnClick="Cancel">@CancleText</MudButton>
		<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Submit">@ButtonText</MudButton>
	</DialogActions>
</MudDialog>