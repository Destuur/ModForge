@page "/newmod"

<MudGrid Style="margin: 0px;" Class="px-2" Spacing="0">

	<MudItem md="12" Style="width: 100%;" Class="pb-2">
		<MudStack Justify="Justify.SpaceBetween" Row Style="height: 100%; width: 100%;" AlignItems="AlignItems.Center">
			<MudText Class="header-primary pr-2" Typo="Typo.h6">@(L[MessageKeys.CreateMod].Value)</MudText>
			<MudSpacer />
			<MudButton OnClick="Cancel" Color="Color.Error" Variant="Variant.Outlined" Style="width: 150px;">@(L[MessageKeys.Back].Value)</MudButton>
			<MudTooltip Text="@(isValid? L[MessageKeys.NewModInputValid].Value : L[MessageKeys.NewModInputInvalid].Value)">
				<MudButton Disabled="@(isValid == false)" OnClick="StartModding" Color="Color.Primary" Variant="Variant.Filled" Style="color: var(--background); width: 150px;">@(L[MessageKeys.StartModding].Value)</MudButton>
			</MudTooltip>
		</MudStack>
	</MudItem>

	<MudItem md="12" Style="width: 100%;">
		<MudStack Spacing="0">
			<MudTextField @bind-Value="@name" Validation="@(new Func<string, string>(ValidateModName))" ShrinkLabel="true" Label="@(L[MessageKeys.ModName].Value)" Variant="Variant.Outlined" Margin="Margin.Dense" Immediate="true" OnKeyUp="GetModId" Required="true"></MudTextField>
			<MudTextField @bind-Value="@description" ShrinkLabel="true" Label="@(L[MessageKeys.ModDescription].Value)" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
			<MudTextField @bind-Value="@author" ShrinkLabel="true" Label="@(L[MessageKeys.ModAuthor].Value)" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
			<MudTextField @bind-Value="@version" ShrinkLabel="true" Label="@(L[MessageKeys.ModVersion].Value)" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
			<MudDatePicker @bind-Value="@createdOn" Label="@(L[MessageKeys.CreatedOn].Value)" DateFormat="yyyy-MM-dd" Date="@DateTime.Now" Variant="Variant.Outlined" Margin="Margin.Dense" AdornmentColor="Color.Inherit" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.CalendarToday" />
			<MudTextField @bind-Value="@modId" ShrinkLabel="true" Label="@(L[MessageKeys.ModId].Value)" Variant="Variant.Outlined" Margin="Margin.Dense" ReadOnly="true" Required="true"></MudTextField>

			<MudStack Row AlignItems="AlignItems.Center">
				<MudCheckBox Size="Size.Medium" T="bool" Color="Color.Primary" @bind-Value="@modifiesLevel" Label="@(L[MessageKeys.ModifiesLevel].Value)"></MudCheckBox>
				<MudCheckBox Size="Size.Medium" T="bool" Color="Color.Primary" @bind-Value="@HasSupportedVersion" Label="@(L[MessageKeys.ModVersionSupport].Value)"></MudCheckBox>
			</MudStack>
			<MudList T="string" Dense="true" ReadOnly="true" Disabled="@(hasSupportVersion == false)">

				<MudListItem Class="pa-0">
					<MudStack Row="true" Justify="Justify.Center">
						<MudTextField Disabled="@(hasSupportVersion == false)" @bind-Text="supportedGameVersion" T="string" Immediate="true" Validation="@(new Func<string, string>(ValidateVersion))" Label="@(L[MessageKeys.Version].Value)" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
						<MudIconButton Disabled="@(hasSupportVersion == false)" OnClick="@(() => AddVersion())" Color="Color.Primary" Class="ml-1" Style="height:2.5rem; width: 2.5rem; align-self: center;" Icon="@Icons.Material.Filled.Add" Variant="Variant.Filled" Size="Size.Medium" ButtonType="ButtonType.Button" Edge="Edge.Start" />
					</MudStack>
				</MudListItem>

				@foreach (var modVersion in supportedGameVersions)
				{
					<MudListItem Gutters="false" Dense="true">
						<MudStack Row="true" Justify="Justify.Center">
							<MudField Label="@("Version" + $" {(supportedGameVersions.IndexOf(modVersion) + 1)}")" Variant="Variant.Outlined" Margin="Margin.Dense">@modVersion</MudField>
							<MudIconButton Class="ml-1" OnClick="(_ => RemoveVersion(modVersion))" Style="height:2.5rem; width: 2.5rem; align-self: center" Icon="@Icons.Material.Filled.Remove" Variant="Variant.Outlined" Size="Size.Medium" ButtonType="ButtonType.Button" Edge="Edge.Start" />
						</MudStack>
					</MudListItem>
				}

			</MudList>
		</MudStack>
	</MudItem>


</MudGrid>

