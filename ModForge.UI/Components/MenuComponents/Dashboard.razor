<MudGrid Style="height: 100%; margin: 0px;" Class="pr-4" Spacing="0">

	<MudItem md="12" Style="height: 15%; padding: 0px;">
		<ButtonWidget Typo="Typo.h4" Title="@buttonContent" Icon="@Icons.Material.Filled.AddBox" ButtonClicked="OnButtonClicked" />
	</MudItem>

	<MudItem md="12" Style="height: 85%; padding: 0px;" Class="@(isCreatedVisible ? string.Empty : "modlist-no-display")">
		<ModListWidget Title="Created Mods" ToggledModList="ToggleModList">
			<ModListItems Mods="createdMods" ModDeleted="RefreshMods" />
		</ModListWidget>
	</MudItem>

	<MudItem md="12" Style="height: 85%; padding: 0px;" Class="@(isCreatedVisible ? "modlist-no-display" : string.Empty)">
		<ModListWidget Title="External Mods" ToggledModList="ToggleModList">
			<ModListItems Mods="externalMods" ModDeleted="RefreshMods" />
		</ModListWidget>
	</MudItem>




</MudGrid>