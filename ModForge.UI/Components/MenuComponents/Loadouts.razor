<MudGrid Style="height: 100%;" Class="pr-4" Spacing="0">

	<MudItem md="12" Style="height: 7%; width: 100%;" Class="pb-2">
		<MudStack Justify="Justify.SpaceBetween" Row Style="height: 100%; width: 100%;" AlignItems="AlignItems.Center">
			<MudText Class="header-primary pr-2" Typo="Typo.h6">Loadouts</MudText>
			<MudSpacer />
			<MudStack Row Style="height: 100%;" AlignItems="AlignItems.Center">
				<ButtonWidgetNoIcon Title="Use Loadout" Typo="Typo.subtitle2" Width="200px" />
				<MudSelect class="ma-0" Style="max-width: 200px; width: 200px;" FullWidth="false" Variant="Variant.Outlined" Margin="Margin.Dense" Placeholder="Select Loadout" Dense T="string">
					<MudSelectItem T="string">Test</MudSelectItem>
				</MudSelect>
			</MudStack>
		</MudStack>
	</MudItem>

	<MudItem md="12" Style="height: 93%; width: 100%;">
		<MudDropContainer T="DropItem" Items="mods" ItemsSelector="@((mod, dropzone) => mod.Selector == dropzone)" ItemDropped="ItemUpdated" Class="d-flex flex-wrap flex-grow-1" Style="height: 100%;">
			<ChildContent>
				<MudGrid Style="height: 100%;" class="pb-2" Spacing="2">
					<MudItem md="3">
						<MudCard Style="height: 100%;" Class="mod-item-card">
							<MudText Class="px-3 py-3" Typo="Typo.subtitle1" Style="font-weight: bold; line-height: 1; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 100%;">Available Mods</MudText>
							<MudList T="string" Class="d-flex flex-column mud-height-full">
								<MudDropZone T="DropItem" Identifier="1" Class="flex-grow-1" />
							</MudList>
						</MudCard>
					</MudItem>
					<MudItem md="3">
						<MudCard Style="height: 100%;" Class="mod-item-card">
							<MudText Class="px-3 py-3" Typo="Typo.subtitle1" Style="font-weight: bold; line-height: 1; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 100%;">Loadout</MudText>
							<MudList T="string" Class="d-flex flex-column mud-height-full">
								<MudDropZone T="DropItem" Identifier="2" Class="flex-grow-1" />
							</MudList>
						</MudCard>
					</MudItem>
					<MudItem md="6">
						<MudCard Style="height: 100%;" Class="mod-item-card">

							@foreach (var buffParam in buffParams)
							{
								<MudStack Row>
									<MudText>@buffParam.Key</MudText>
									<MudText>@buffParam.Operation</MudText>
									<MudText>@buffParam.Value</MudText>
								</MudStack>
							}

						</MudCard>
					</MudItem>
				</MudGrid>
			</ChildContent>
			<ItemRenderer>
				<MudListItem T="string" Text="@context.Mod.Name" />
			</ItemRenderer>
		</MudDropContainer>
		

	</MudItem>


</MudGrid>