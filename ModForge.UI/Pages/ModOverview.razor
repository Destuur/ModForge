@page "/modoverview"
@using ModForge.Shared.Models.ModItems

@if (mod is not null)
{
	<MudGrid Spacing="4" Class="pa-4">

		<MudItem sm="9" Style="display: flex; align-items: center;">
			<MudText Typo="Typo.h4" Style="font-weight: bold;">OVERVIEW</MudText>
		</MudItem>

		<MudItem sm="3">
			<MudButton Class="button-neutral" FullWidth="true" OnClick="ContinueModding">Continue Modding</MudButton>
		</MudItem>

	</MudGrid>

	<MudPaper Class="d-flex flex-column overflow-x-auto" Height="calc(100vh - 188px)" Elevation="0" Outlined="false" Style="background-color: transparent">
		<MudGrid Justify="Justify.FlexStart" Class="px-6 py-4">


			@foreach (var modItem in mod.ModItems)
			{

				@if (modItem is Perk perk)
				{
					<PerkListItem Perk="perk" Placeholder="@perk.Name"></PerkListItem>
				}

				@if (modItem is Buff buff)
				{
					<BuffListItem Buff="buff" Placeholder="@buff.Name"></BuffListItem>
				}
			}

		</MudGrid>
	</MudPaper>

	<MudStack Row="true" Class="px-4 mt-4">
		<MudButton Class="button-prominent" FullWidth="true" Variant="Variant.Filled" Color="Color.Primary" OnClick="ExportMod">Create Mod</MudButton>
	</MudStack>
}