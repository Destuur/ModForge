@page "/moditems/{ModId}"
@page "/moditems"
@using ModForge.UI.Components.MenuComponents

<MudGrid Style="height: 100%; margin: 0px;" Spacing="0">

	<MudItem Style="padding: 0px; width: 56px; ">
		<MudStack style="height: 100%;" AlignItems="AlignItems.Center" Spacing="2">
			<MudTooltip Text="@L[MessageKeys.Perks].Value">
				<MudImage @onclick="@(() => OnChangeChildContent(typeof(Perks)))" Src="@IconService.GetBase64Icon("Trigger_icon")" Height="32" Width="32" Style="cursor: pointer;" />
			</MudTooltip>
			<MudTooltip Text="@L[MessageKeys.Buffs].Value">
				<MudImage @onclick="@(() => OnChangeChildContent(typeof(Buffs)))" Src="@IconService.GetBase64Icon("mainlevel_characterCreation_icon")" Height="32" Width="32" Style="cursor: pointer;" />
			</MudTooltip>
			<MudTooltip Text="@L[MessageKeys.Weapons].Value">
				<MudImage @onclick="@(() => OnChangeChildContent(typeof(Weapons)))" Src="@IconService.GetBase64Icon("warrior_characterCreation_icon")" Height="32" Width="32" Style="cursor: pointer;" />
			</MudTooltip>
			<MudTooltip Text="@L[MessageKeys.Armors].Value">
				<MudImage @onclick="@(() => OnChangeChildContent(typeof(Armors)))" Src="@IconService.GetBase64Icon("Statistics/2_icon")" Height="32" Width="32" Style="cursor: pointer;" />
			</MudTooltip>
			<MudTooltip Text="@L[MessageKeys.Consumables].Value">
				<MudImage @onclick="@(() => OnChangeChildContent(typeof(Consumables)))" Src="@IconService.GetBase64Icon("Statistics/4_icon")" Height="32" Width="32" Style="cursor: pointer;" />
			</MudTooltip>
			<MudTooltip Text="@L[MessageKeys.CraftingItems].Value">
				<MudImage @onclick="@(() => OnChangeChildContent(typeof(CraftingMaterials)))" Src="@IconService.GetBase64Icon("Statistics/5_icon")" Height="32" Width="32" Style="cursor: pointer;" />
			</MudTooltip>
			<MudTooltip Text="@L[MessageKeys.MiscItems].Value">
				<MudImage @onclick="@(() => OnChangeChildContent(typeof(MiscItems)))" Src="@IconService.GetBase64Icon("Statistics/7_icon")" Height="32" Width="32" Style="cursor: pointer;" />
			</MudTooltip>
			<MudTooltip Text="STORM Rules">
				<MudImage @onclick="@(() => OnChangeChildContent(typeof(NewRules)))" Src="@IconService.GetBase64Icon("Perks/perk_whirlwind_0_icon")" Height="32" Width="32" Style="cursor: pointer;" />
			</MudTooltip>
			<MudSpacer />
			<MudTooltip Text="@L[MessageKeys.Back].Value">
				<MudIconButton Icon="@Icons.Material.Filled.Logout" Color="Color.Error" Onclick="ExitModding" />
			</MudTooltip>
			<MudTooltip Text="@L[MessageKeys.Help].Value">
				<MudIconButton Icon="@Icons.Material.Filled.Help" Style="color: var(--icon-primary);" OnClick="GetHelp" />
			</MudTooltip>
		</MudStack>
	</MudItem>

	<MudItem Style="padding: 0px; height: 100%; width: calc(100% - 56px);">

			@CustomRender

	</MudItem>

</MudGrid>

