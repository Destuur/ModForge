@page "/editing/moditem/{Id}"

<MudStack style="height: 100%;" Class="pa-4">

	<MudStack Row Justify="Justify.SpaceBetween">

		<MudText Typo="Typo.h6" Class="header-primary">@($"{editingModItem.GetType().Name}: {LocalizationService.GetName(editingModItem)}")</MudText>
		<MudButton OnClick="ResetModItem" Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Small">Reset</MudButton>
	</MudStack>

	<MudPaper Class="overflow-y-auto" Elevation="0" Outlined="false" Style="height: 100%;">
		<MudStack Spacing="0">
			@foreach (var attribute in sortedAttributes)
			{
				<AttributeSelector Attribute="attribute" @key="attribute.Name"></AttributeSelector>
				<MudDivider />
			}
		</MudStack>
	</MudPaper>


	<MudStack Row="true" Justify="Justify.FlexEnd">
		<MudButton Variant="Variant.Outlined" Color="Color.Error" OnClick="Cancel">Cancel</MudButton>
		@* <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="SaveBuff">Save & Continue Modding</MudButton> *@
	</MudStack>

</MudStack>
