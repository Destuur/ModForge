@page "/"

<MudGrid Style="height: 100%; margin: 0px;" Spacing="0">

	<MudItem Style=" padding: 0px; width: 56px;">
		<MudStack AlignItems="AlignItems.Center" Spacing="0">
			<MudIconButton Icon="@Icons.Material.Outlined.Home" Style="color: var(--icon-primary);" />
			<MudIconButton Icon="@Icons.Material.Outlined.Tune" Style="color: var(--icon-primary);" />
			<MudIconButton Icon="@Icons.Material.Outlined.Settings" Style="color: var(--icon-primary);" />
		</MudStack>
	</MudItem>

	<MudItem Style="padding: 0px; width: calc(100% - 56px);">

		<MudGrid Style="height: 100%; margin: 0px;" Class="pr-2" Spacing="0">

			<MudItem md="12" Style="height: 15%; padding: 0px;">
				<ButtonWidget Title="@(L["NewModButton"].Value.ToUpper())"  Icon="@Icons.Material.Filled.AddBox" ButtonClicked="OnButtonClicked" />
			</MudItem>

			<MudItem md="12" Style="height: 85%; padding: 0px;">
				<ModListWidget Title="Created">
					<ModListItems Mods="createdMods" />
				</ModListWidget>
			</MudItem>

		</MudGrid>

	</MudItem>

</MudGrid>